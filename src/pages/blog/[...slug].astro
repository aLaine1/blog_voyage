    }
    
    .article-content th,
    .article-content td {
      border: 1px solid #f0ebe6;
      padding: 15px;
      text-align: left;
    }
    
    .article-content th {
      background: #faf8f6;
      font-weight: 600;
      color: #5d4e37;
    }
    
    .article-content tr:hover {
      background: #fdfbfb;
    }
    
    @media (max-width: 768px) {
      h1 {
        font-size: 2em;
      }
      
