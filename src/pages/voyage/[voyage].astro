---
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  
  const voyages = [...new Set(
    allPosts
      .map(post => post.data.voyage)
      .filter(voyage => voyage !== undefined)
  )];
  
  return voyages.map(voyage => ({
    params: { voyage },
    props: { 
      posts: allPosts
        .filter(post => post.data.voyage === voyage)
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    }
  }));
}

const { voyage } = Astro.params;
const { posts } = Astro.props;

const voyageNames = {
  'japon-2025': 'Japon 2025',
  'italie-2024': 'Italie 2024',
  'test': 'Articles de Test',
};

