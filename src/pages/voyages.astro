---
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');

const voyages = {};
allPosts.forEach(post => {
  const voyage = post.data.voyage;
  if (voyage) {
    if (!voyages[voyage]) {
      voyages[voyage] = {
        slug: voyage,
        articles: [],
        latestDate: post.data.pubDate
      };
    }
    voyages[voyage].articles.push(post);
    if (post.data.pubDate > voyages[voyage].latestDate) {
      voyages[voyage].latestDate = post.data.pubDate;
    }
  }
});

const voyageNames = {
  'japon-2025': 'Japon 2025',
  'italie-2024': 'Italie 2024',
  'test': 'Articles de Test',
};

